<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"

    android:orientation="vertical">


    <ImageView

        android:id="@+id/image_author"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/homefont"
        android:text=""
        android:textColor="@color/menucolor"
        android:textSize="22dp"

        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:background="#fff"
        android:gravity="right"
        android:orientation="vertical"
        android:weightSum="8">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:layout_weight="1">

            <TextView

                android:id="@+id/homee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/bt_design1"


                android:drawableRight="@drawable/ic_baseline_home_24"

                android:drawablePadding="20dp"
                android:fontFamily="@font/homefont"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="الرئيسية"
                android:textColor="#654062"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#95292827" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bt_design1">

            <TextView

                android:id="@+id/tv_searsh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/bt_design1"
                android:drawableRight="@drawable/ic_baseline_search_24"
                android:drawablePadding="20dp"
                android:fontFamily="@font/homefont"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="البحث"
                android:textColor="@color/menucolor"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#95292827" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bt_design1">


            <TextView
                android:id="@+id/notify"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/bt_design1"
                android:drawableRight="@drawable/ic_baseline_notifications_none_24"
                android:drawablePadding="20dp"
                android:fontFamily="@font/homefont"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="الاشعارات"
                android:textColor="@color/menucolor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="28dp"
                android:layout_marginBottom="19dp"
                android:background="@drawable/circle_txt"
                android:gravity="center"
                android:padding="1dp"

                android:text="2"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#95292827" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bt_design1">

            <TextView
                android:id="@+id/news"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_design1"
                android:drawableRight="@drawable/ic_news24"
                android:drawablePadding="20dp"
                android:fontFamily="@font/homefont"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="الاخبار"
                android:textColor="#654062"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#95292827" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bt_design1">


            <TextView
                android:id="@+id/call_us"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_design1"
                android:drawableRight="@drawable/ic_baseline_contact_support_24"
                android:drawablePadding="20dp"
                android:fontFamily="@font/homefont"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="تواصل معنا"
                android:textColor="#654062"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#95292827" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bt_design1">


            <TextView
                android:id="@+id/about_app"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_design1"
                android:drawableRight="@drawable/ic_baseline_people_24"
                android:drawablePadding="20dp"
                android:fontFamily="@font/homefont"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="عن التطبيق"
                android:textColor="#654062"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#95292827" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bt_design1">


            <TextView
                android:id="@+id/share_nav"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_design1"
                android:drawableRight="@drawable/ic_share_24"
                android:drawablePadding="20dp"
                android:fontFamily="@font/homefont"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="دعوة صديق"
                android:textColor="#654062"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#95292827" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bt_design1">

            <TextView
                android:id="@+id/nav_logout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bt_design1"
                android:drawableRight="@drawable/ic_baseline_exit_to_app_24"
                android:drawablePadding="20dp"
                android:fontFamily="@font/homefont"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="تسجيل الخروج"
                android:textColor="#654062"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#95292827" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>