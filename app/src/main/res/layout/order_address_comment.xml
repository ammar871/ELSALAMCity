<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#fff"
    app:cardElevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/_10sdp"
            android:drawableRight="@drawable/ic_baseline_add_shopping_cart_24"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/homefont"
            android:text="ارسال طلب "
            android:textColor="@color/menucolor"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="@font/homefont"
            android:text="من فضلك أدخل عنوان صالح .. "
            android:textColor="@color/menucolor"
            android:textSize="@dimen/_10ssp" />

        <EditText
            android:id="@+id/ednaddresse_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/homefont"
            android:hint="العنوان"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/homefont"
            android:hint="اترك لنا تعليقك "
            android:textColorHint="@color/colorPrimary"
            android:textSize="20dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp">


            <RadioButton

                android:id="@+id/shipToAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/homefont"
                android:text="الحصول علي موقعي "
                android:textColor="@color/menucolor" />





        </RadioGroup>
    </LinearLayout>


</androidx.cardview.widget.CardView>