                <TextView
                    android:id="@+id/tv_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_call"
                    android:layout_alignParentLeft="true"

                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:drawableLeft="@drawable/ic_islicke"
                    android:drawablePadding="@dimen/_4sdp"
                    android:fontFamily="@font/homefont"
                    android:text="0"
                    android:textColor="@color/menucolor"
                    android:textSize="@dimen/_18ssp" />

                <com.andremion.counterfab.CounterFab
                    android:id="@+id/fabcont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_call"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/_5sdp"
                    app:backgroundTint="@color/white"
                    app:badgeBackgroundColor="@color/red"
                    app:badgePosition="RightTop"
                    app:badgeTextColor="@color/white"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_baseline_favorite_24" />


                <LinearLayout
                    android:id="@+id/layout_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_call"

                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

