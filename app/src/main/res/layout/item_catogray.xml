<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/btn_design_back"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imag_item"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="150dp"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/homefont"
        android:gravity="center"
        android:layout_below="@id/imag_item"
        android:textColor="@color/menucolor"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="مواصلات oooooooooooooooooooooooooooooooooooooooooooo"
        android:id="@+id/tv_item_title"/>


</RelativeLayout>