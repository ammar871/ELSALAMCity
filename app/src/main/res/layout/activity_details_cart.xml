                        android:padding="@dimen/_5sdp"
                        app:backgroundTint="@color/menucolor"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/whatsapp" />
                </LinearLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/rateProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_call"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                   >

                    <TextView
                        app:layout_constraintWidth_percent="0.25"
                        android:id="@+id/tv_location"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_design_back"
                        android:drawableTop="@drawable/ic_baseline_location__24"
                        android:drawablePadding="@dimen/_2sdp"
                        android:fontFamily="@font/homefont"
                        android:gravity="center"
                        android:text="موقع المحل "
                        android:textColor="@color/menucolor"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        app:layout_constraintWidth_percent="0.25"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/tv_location"
                        android:id="@+id/lay_fab"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:background="@drawable/btn_design_back"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_star"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@id/img_star"
                            android:layout_gravity="center"

                            android:fontFamily="@font/homefont"
                            android:gravity="center"
                            android:text="المفضلــة"
                            android:textColor="@color/menucolor"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>

                    <LinearLayout
                        app:layout_constraintWidth_percent="0.25"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/tv_location"
                        android:id="@+id/lay_isfab"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:background="@drawable/btn_design_back"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img_isfab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_baseline_favorite_24" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_star"
                            android:layout_gravity="center"

                            android:fontFamily="@font/homefont"
                            android:text="المفضلــة"

                            android:textColor="@color/menucolor"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>

                    <TextView
                        app:layout_constraintWidth_percent="0.25"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/lay_fab"
                        android:id="@+id/tv_Share"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_design_back"
                        android:drawableTop="@drawable/ic_share_24"
                        android:drawablePadding="@dimen/_2sdp"
                        android:fontFamily="@font/homefont"
                        android:gravity="center"
                        android:text="مشاركة المنتج"
                        android:textColor="@color/menucolor"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        app:layout_constraintWidth_percent="0.25"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/tv_Share"
                        android:id="@+id/lay_like"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:background="@drawable/btn_design_back"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_thumbs_up" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@id/img_star"
                            android:layout_gravity="center"

                            android:fontFamily="@font/homefont"
                            android:gravity="center"
                            android:text="اعجـاب"
                            android:textColor="@color/menucolor"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>

                    <LinearLayout
                        app:layout_constraintWidth_percent="0.25"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/tv_Share"
                        android:id="@+id/lay_islike"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:background="@drawable/btn_design_back"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img_islike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_islicke" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@id/img_star"
                            android:layout_gravity="center"

                            android:fontFamily="@font/homefont"
                            android:gravity="center"
                            android:text="اعجـاب"
                            android:textColor="@color/menucolor"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <RelativeLayout

                    android:id="@+id/layout_delivary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rateProduct"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/tv_calldelevary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/fabdelivaryhome"
                        android:fontFamily="@font/homefont"
                        android:text="اطلب من الدليفرى"
                        android:textColor="@color/menucolor"
                        android:textSize="@dimen/_15sdp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabdelivaryhome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:contentDescription="@string/app_name"
                        android:padding="@dimen/_5sdp"

                        app:backgroundTint="@color/menucolor"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/call_24" />

                    <LinearLayout

                        android:id="@+id/linerbuttun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toLeftOf="@id/fabdelivaryhome"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fabCalldelavary"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:contentDescription="@string/app_name"

                            android:visibility="gone"


                            app:srcCompat="@drawable/call_green" />

                        <ImageView
                            android:id="@+id/fabCallwahtsdelevary"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_10sdp"

                            android:layout_marginRight="@dimen/_10sdp"
                            android:contentDescription="@string/app_name"

                            android:visibility="gone"


                            app:srcCompat="@drawable/whatsapp" />


                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>

        </ScrollView>


        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3315263708203388/4286849317">

        </com.google.android.gms.ads.AdView>


